<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context="com.example.kellychung.popularmovie.MovieDetailActivity">

    <TextView
        android:id="@+id/txtViewMovieTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:text="Title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#aa1e191d" android:textStyle="bold"/>

    <ScrollView

        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" android:fillViewport="false">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:tools="http://schemas.android.com/tools"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:paddingLeft="10dp">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:tools="http://schemas.android.com/tools"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewMovie"
                android:layout_width="200dp"
                android:layout_height="240dp"
                android:paddingBottom="5dp"
                android:paddingTop="10dp"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          xmlns:tools="http://schemas.android.com/tools"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:paddingLeft="25dp"
                          android:paddingTop="50dp" >

                <TextView
                    android:id="@+id/txtViewVoteAvg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#070707"/>


                <TextView
                    android:id="@+id/txtViewReleaseDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>


                <Button
                    android:id="@+id/btnFavorite"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="Mark as favorite"
                    android:textAlignment="center" android:textColor="#f22b2d36"
                    android:textSize="10dp" android:visibility="visible"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout
        >



        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:tools="http://schemas.android.com/tools"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                android:id="@+id/txtViewOverviewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                android:text="Movie Overview"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#010101"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/txtViewOverview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elegantTextHeight="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#010101"
                />


            <TextView
                android:id="@+id/txtViewVideoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="5dp"
                android:text="Movie Videos"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#010101"
                android:textStyle="bold"
                />

            <ListView
                android:id="@+id/list_movie_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"/>

            <TextView
                android:id="@+id/txtViewReviewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Movie Reviews"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#010101"
                android:textStyle="bold"
                />
            <ListView
                android:id="@+id/list_movie_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"/>

        </LinearLayout>

</LinearLayout>
